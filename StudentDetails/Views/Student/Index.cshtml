@model IEnumerable<StudentDetails.Models.Students>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h1 style="text-align: center">List</h1>
</br>
<div style="display:inline">
    <form asp-controller="Student" asp-action="Create" method="get">
        <button style="float:left" class="btn btn-success">New</button>
    </form>
    <form asp-controller="Home" asp-action="Index">
        <button style="float:right" class="btn btn-success">Home</button>
    </form>
</div>
</br>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNumber) @*Html.DisplayNameFor tag is used to display the name of the model property*@
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Address)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach(var items in Model)
    {
         <tr>
             <td>
                 @Html.DisplayFor(modelitems => items.RollNumber)
             </td>
             <td>
                 @Html.DisplayFor(modelitems => items.StudentName)
             </td>
             <td>
                 @Html.DisplayFor(modelitems => items.PhoneNumber)
             </td>
             <td>
                 @Html.DisplayFor(modelitems => items.Address)
             </td>
             <td>
                 <div class="btn-group btn-group-sm">     				@*btn-group is used to group buttons vertically or horizontally*@          
                    <a asp-action="Edit" asp-route-id="@items.RollNumber" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-controller="Student" asp-action="Delete" asp-route-id="@items.RollNumber" method="post">
                        <button type="submit" class="btn btn-primary btn-sm"
                        onclick="return confirm('Are you sure to delete this record?')">
                            Delete
                        </button>
                    </form>
                 </div>
             </td>
         </tr>   
    }
</table>

